{% extends 'base.html.twig' %}

{% block title %}Recettes - {% endblock %}

{% block body %}
    <h1>Recettes</h1>
    <div>
        <a href="{{ path('app_recipe_new') }}">
            <button class="btn btn-primary">Ajouter une recette</button>
        </a>
    </div>
    <main>
        {% for recipe in recipes %}
            <h2>
                <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">
                    {{ recipe.title }}
            </h2>
            <img src="{{ recipe.picture }}" alt="Image du plat {{ recipe.title }}">
        {% endfor %}
    </main>
{% endblock %}
